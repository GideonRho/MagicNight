@using MagicNight.Models.Data.Generating

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="Distribution">
            <DeckTypeDistributionDisplay Distribution="@Builder.Distribution"/>
        </MudTabPanel>
        <MudTabPanel Text="Curve">
            <DeckCurveDisplay Curve="@Builder.Curve"/>
        </MudTabPanel>
        <MudTabPanel Text="Weights">
            <DeckWeightsDisplay Weights="@Builder.Weights"/>
        </MudTabPanel>
    </MudTabs>
</MudContainer>

@code {
    
    [Parameter]
    public DeckGeneratorData Builder { get; set; }
    
}